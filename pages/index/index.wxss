.title { padding: 8px 10px; background: #000; color: #fff; font-size: 1rem; }
.swiper { width: 100%; height: 180px; text-align: center; position: relative; }
    .slide-image { width: 100%; height: 180px; }
    .slide-tit { width: 100%; padding: 6px 0; background: rgba(0,0,0,.6); text-align: center; position: absolute; left: 0; bottom: 0; color: #fff; font-size: 0.8rem; }

.avaDiv { width: 100%; overflow: hidden; margin: 20px auto; text-align: center; }
        .avaImg { width: 80px; height: 80px; border-radius: 80px; }
        .avaName { display: block; padding-top: 10px; }

.logBtn,.regBtn { display: block; width: 100px; height: 32px; line-height: 32px; margin: 10px auto 0; background: #2aabf3; color: #fff; border-radius: 3px; font-size: .8rem; text-align: center; }
.regBtn { background: #000; }




/* 旋转 */
.reverseRotataZ { -webkit-animation: reverseRotataZ 12s infinite ease; animation: reverseRotataZ 12s infinite ease; }
@-webkit-keyframes reverseRotataZ {
    0% { -webkit-transform: rotateZ(0deg); }
    100% { -webkit-transform: rotateZ(-360deg); }
}
@-webkit-keyframes rotataZ {
    0% { -webkit-transform: rotateZ(0deg); }
    100% { -webkit-transform: rotateZ(360deg); }
}